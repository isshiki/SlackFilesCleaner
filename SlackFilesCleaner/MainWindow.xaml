<Window x:Class="SlackFilesCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlackFilesCleaner"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="650">
    <Grid>
        <Label Content="OAuth アクセストークン:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxOAuthAccessToken" Height="23" Margin="136,14,10,0" TextWrapping="Wrap" Text="xoxp-0000000000-0000000000-000000000000-00x00000000000xxx00000x00xxx0000" VerticalAlignment="Top" RenderTransformOrigin="0.065,-0.338"/>
        <Button x:Name="buttonListFiles" Content="ファイル一覧を以下に取得" Margin="10,42,10,0" VerticalAlignment="Top" Click="buttonListFiles_Click" Height="37"/>
        <TextBox x:Name="textboxFilesList" Margin="10,115,10,52" TextWrapping="Wrap"/>
        <Label Content="取得したファイル一覧（1000件まで）:" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonDeleteFiles" Content="上記一覧の全ファイルを削除" Margin="10,0,10,10"  Height="37" VerticalAlignment="Bottom" Click="buttonDeleteFiles_Click"/>

    </Grid>
</Window>
